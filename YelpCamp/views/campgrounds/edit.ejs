<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST"
              enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]"
                       value="<%= campground.title %>" required>
                <div class="invalid-feedback">
                    Please enter a valid title.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]"
                       value="<%= campground.location %>" required>
                <div class="invalid-feedback">
                    Please enter a valid location.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                           aria-describedby="price-label" name="campground[price]" value="<%= campground.price %>"
                           required>
                </div>
                <div class="invalid-feedback">
                    Please enter a valid price.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                          name="campground[description]"><%= campground.description %></textarea>
            </div>
            <div class="mb-4">
                <div class="mb-3">
                    <label for="images" class="form-label">Add images</label>
                    <input class="form-control" type="file" name="images" id="images" multiple>
                </div>
            </div>
            <p>Current images</p>
            <div class="card mb-3" id="delete-images">
                <div class="card-body">
                    <div class="row">
                        <% campground.images.forEach((imgObject, i) => { %>
                            <div class="col-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="deletedImages[]"
                                           value="<%= imgObject.filename %>" id="delete-<%= i %>">
                                    <label class="form-check-label" for="delete-<%= i %>">
                                        Delete
                                    </label>
                                </div>
                                <img src="<%= imgObject.thumbnail %>" class="img-thumbnail" alt="image thumbnail">
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info me-3">Update Campground</button>
                <a href="/campgrounds/<%= campground._id %>">
                    <button type="button" class="btn btn-success">Cancel</button>
                </a>

            </div>
        </form>
    </div>
</div>